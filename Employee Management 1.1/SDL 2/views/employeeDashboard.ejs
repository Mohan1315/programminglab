<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <%- include('partials/sidebar.ejs') %>

        <!-- Main Content -->
        <div class="flex flex-1 flex-col overflow-hidden">
            <!-- Header -->
            <%- include('partials/Header.ejs') %>

            <!-- Dashboard Content -->
            <main class="flex-1 overflow-y-auto p-4 lg:p-6">
                
                <%- include('partials/personalInfo.ejs') %>
                <div id="qualifications">
                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <h2 class="text-xl font-bold mb-4">Qualifications</h2>
                        <ul id="qualifications-list" class="space-y-4">
                            <!-- List of qualifications will be rendered here -->
                        </ul>
                        <button id="add-qualification" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded">Add
                            Qualification</button>
                    </div>
                </div>

                <div id="achievements">
                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <h2 class="text-xl font-bold mb-4">Achievements</h2>
                        <ul id="achievements-list" class="space-y-4">
                            <!-- List of achievements will be rendered here -->
                        </ul>
                        <button id="add-achievement" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded">Add
                            Achievement</button>
                    </div>
                </div>

                <!-- Other sections (skills, documents, leave-requests) will go here -->
            </main>
        </div>
    </div>

    <script src="/js/empDash.js"></script>
</body>

</html>